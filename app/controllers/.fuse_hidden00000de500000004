class VotesController < ApplicationController
	before_filter :authenticate_user!

	expose(:vote)

	def create
		vote.user_id = current_user.id
		handle_vote
	end

	def update
		handle_vote
	end

private
	def handle_vote
		if vote.save
			render json: {
				status: :ok
			,	message: "updated"
			}
		else
			render json: {
				status: :conflict
			,	message: "rejected"
			}
		end
	end
end
