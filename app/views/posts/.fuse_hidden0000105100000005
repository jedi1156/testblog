.post--full-size
  %h2
    = post.title
    %small
      = post.creation_time
  = link_to "edit", edit_post_path(post), class: 'post__button--edit'

  .post__body
    = post.multiline_body.html_safe
  .post__tags-list.tagsinput
    - post.tags_array.each do |tag|
      = content_tag :span, tag, class: 'tag'

  .post__comments
    %header
      %h2
        Comments
        = link_to "add new", new_post_comment_path(post), class: "comment_button--add pull-right"
    - comments.each do |comment|
      .post__comment
        %h3
          = comment.user.to_s
          %span.comment__votes= "Votes #{comment.votes_val}"
          = link_to "Like", post_comment_path(post, comment) + "/like", class: "vote_button--like pull-right"
          = link_to "Dislike", post_comment_path(post, comment) + "/dislike", class: "vote_button--dislike pull-right"
        %p= comment.multiline_body.html_safe
